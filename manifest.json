{
  "manifest_version": 3,
  "name": "TapNFill",
  "short_name": "TapNFill",
  "version": "0.0.2",
  "description": "Fill any form instantly with just one tap. TapNFill saves your info and makes form-filling fast, easy, and hassle-free",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": ["contextMenus", "scripting", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
